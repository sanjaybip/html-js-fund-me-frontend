{
    "compilerOptions": {
        "lib": ["ES2018", "DOM"],
        "target": "es2018",
        "module": "ES6",
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types"],
        "removeComments": true,
        "allowJs": true
    },
    "exclude": ["./dist", "./node_modules"]
}
